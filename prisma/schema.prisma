generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Directors {
  id     Int      @id @default(autoincrement())
  name   String   @unique
  movies Movies[] @relation("director_movies")
}

model Movies {
  id                 Int        @id @default(autoincrement())
  rank               Int        @unique
  title              String
  description        String
  runtime            Int
  genre              String
  rating             Float
  metascore          Int
  votes              Int
  grossEarningsInMil Float
  actor              String
  releaseYear        Int
  directorId         Int?
  director           Directors? @relation("director_movies", fields: [directorId], references: [id], onDelete: Cascade)
}

model users {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}
